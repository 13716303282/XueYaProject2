<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/body_background"
    android:orientation="vertical">
    <include layout="@layout/base_title"></include>


    <RelativeLayout

        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:padding="8dp"
        android:src="@mipmap/login_phone_img"
        android:scaleType="centerCrop"
        />

        <EditText
            android:id="@+id/ed_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_1"
            android:hint="手机"
            android:textColorHint="#ccc"
            android:background="@null"
            android:inputType="phone"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:textColor="#ccc"
            android:maxLength="11"
            android:paddingRight="50dp" />

        <TextView
            android:id="@+id/tv_input_phone"
            android:layout_width="95dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:textColor="#ccc"
            android:gravity="center"
            android:text="@string/login_phone" />
    </RelativeLayout>
    <View

        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#ccc"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="55dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:src="@mipmap/login_password_img"
            android:scaleType="centerCrop"
           />

        <EditText
            android:id="@+id/ed_pas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_toRightOf="@id/iv_2"
            android:hint="密码"
            android:maxLength="16"
            android:textColorHint="#ccc"
            android:inputType="textPassword"
            android:layout_weight="5"
            android:paddingLeft="15dp"
            android:paddingRight="50dp" />

        <TextView
            android:id="@+id/tv_input_pas"
            android:layout_width="95dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:text="@string/login_pas"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="#ccc"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_forgotpas"
        android:layout_width="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="忘记密码?"
        android:textColor="@color/title_color"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/white"
        android:background="@color/title_color"
        android:textSize="22dp"
        android:gravity="center"
        android:text="登录"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_register"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
        android:text="还没有注册" />
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="注册"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/title_color"/>
    </RelativeLayout>
</LinearLayout>
